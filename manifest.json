{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "short_name": "Tinning the Tabs",
  "description": "__MSG_appDesc__",
  "version": "2.0.0",

  "default_locale": "en",

  "browser_action": {
    "default_icon": "src/assets/icons/tinning_32.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "icons": {
    "16": "src/assets/icons/tinning_16.png",
    "32": "src/assets/icons/tinning_32.png",
    "48": "src/assets/icons/tinning_48.png",
    "128": "src/assets/icons/tinning_128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "background",
    "bookmarks",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
